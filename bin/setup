#!/usr/bin/env ruby
require 'pathname'

# path to your application root.
APP_ROOT = Pathname.new File.expand_path('../../',  __FILE__)

Dir.chdir APP_ROOT do
  puts '== Installing gems =='
  system 'gem install bundler --conservative'
  system 'bundle check || bundle install'

  puts '== Installing node modules =='
  system 'npm install'

  puts "\n== Copying database, config, sec_config and newrelic license files =="
  unless File.exist?("config/database.yml")
    system 'cp config/database.yml.sample config/database.yml'
  end

  unless File.exist?("config/sec_config.yml")
    system 'cp config/sec_config.yml.sample config/sec_config.yml'
  end

  unless File.exist?("config/newrelic_lic_config.yml")
    system 'cp config/newrelic_lic_config.yml.sample config/newrelic_lic_config.yml'
  end

  puts "\n== Preparing database =="
  system 'bin/rake db:setup'
  system 'bin/rake db:test:prepare'

  puts "\n== Make sure you fill in sec_config.yml =="
  puts "\n== To start rails app and webpack: =="
  puts 'bundle exec rails s'
  puts 'webpack'
end
